<%- include('partials/header') %>

<h3> Liste des quizzes du sujet <%= tag.name %> </h3>

<div class="row">

  <% for(let quiz of tag.quizzes) { %>
    <div class="col">
        <a href="/quiz/<%= quiz.id %>">
          <h3><%= quiz.title %></h3>
        </a>
        <h5><%= quiz.description %></h5>
        <p>by <%= quiz.author.getFullName() %></p>
    </div>
  <% } %>

</div>

<%- include('partials/footer') %>